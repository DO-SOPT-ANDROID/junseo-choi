<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_sign_in_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Welcome to Sopt"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_sign_in_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:text="ID"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sign_in_title" />

    <EditText
        android:id="@+id/tv_sign_in_inputid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="아이디를 입력해주세요"
        android:singleLine = "true"
        android:lines = "1"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/tv_sign_in_id"
        app:layout_constraintTop_toBottomOf="@id/tv_sign_in_id"
        android:windowSoftInputMode="adjustResize" />

    <TextView
        android:id="@+id/tv_sign_in_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:text="PW"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sign_in_inputid" />

    <EditText
        android:id="@+id/tv_sign_in_inputpw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="비밀번호를 입력해주세요"
        android:singleLine = "true"
        android:lines = "1"
        android:inputType="textPassword"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sign_in_pw"
        android:windowSoftInputMode="adjustResize"
        android:imeOptions="actionDone"
        />

    <TextView
        android:id="@+id/tv_sign_up_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="23dp"
        android:text="회원가입"
        android:textSize="18sp"
        android:textColor="#808080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sign_in_inputpw" />

    <CheckBox
        android:id="@+id/tv_sign_in_autologin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자동 로그인"
        android:textSize="18sp"
        android:textColor="#808080"
        android:buttonTint="#808080"
        android:layout_marginStart="23dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_sign_in_inputpw"
    />

    <Button
        android:id="@+id/tv_sign_in_inbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="로그인 하기"
        android:layout_marginBottom="30dp" />


</androidx.constraintlayout.widget.ConstraintLayout>