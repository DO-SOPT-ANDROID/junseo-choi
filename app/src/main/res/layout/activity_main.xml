<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/tv_main_profile_frame"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="13dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_main_viewnickname">

        <ImageView
            android:id="@+id/tv_main_profile_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/default_profile" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_main_signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:text="LogOut"
        android:textColor="#808080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_main_viewnickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Test"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_main_intromg"
    />

    <TextView
        android:id="@+id/tv_main_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp"
        android:text="Your ID"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_main_profile_frame"
        app:layout_constraintBottom_toTopOf="@id/tv_main_viewid"
        />

    <TextView
        android:id="@+id/tv_main_viewid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginBottom="25dp"
        android:text="Test"
        android:gravity="center"
        android:textColor="#808080"
        app:layout_constraintTop_toBottomOf="@id/tv_main_id"
        app:layout_constraintBottom_toTopOf="@id/tv_main_MBTI"
        />

    <TextView
        android:id="@+id/tv_main_MBTI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Your MBTI"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_main_MBTI"
        app:layout_constraintBottom_toTopOf="@id/tv_main_viewMBTI"
        />

    <TextView
        android:id="@+id/tv_main_viewMBTI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginBottom="40dp"
        android:text="Test"
        android:gravity="center"
        android:textColor="#808080"
        app:layout_constraintTop_toBottomOf="@id/tv_main_MBTI"
        app:layout_constraintBottom_toTopOf="@id/tv_main_intromg"
        />

    <TextView
        android:id="@+id/tv_main_intromg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="&quot;\n산책이 가고싶은 기분이네요\n\n&quot;"
        android:gravity="center"
        android:textColor="#808080"
        app:layout_constraintTop_toBottomOf="@id/tv_main_viewnickname"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>